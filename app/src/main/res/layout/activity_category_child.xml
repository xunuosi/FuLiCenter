<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_category_child"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cn.ucai.fulicenter.activity.CategoryChildActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/good_detail_title_bg"
        >
        <ImageView
            android:id="@+id/title_back_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back"
            />
        <cn.ucai.fulicenter.views.CatChildFilterButton
            android:id="@+id/btnCatChildFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/arrow2_up"
            android:background="@null"
            android:textColor="@color/white"
            android:text="分类"/>
    </RelativeLayout>

    <LinearLayout
        android:background="@color/orange"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        >
        <Button
            android:id="@+id/category_child_activity_price"
            android:background="@color/orange"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cartegroy_child_price_button"
            android:drawableRight="@mipmap/arrow_order_up"
            android:paddingRight="10dp"
            />
        <Button
            android:id="@+id/category_child_activity_time"
            android:background="@color/orange"
            android:layout_weight="0.5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="@string/cartegroy_child_time_button"
            android:drawableRight="@mipmap/arrow_order_up"
            android:paddingRight="10dp"
            />
    </LinearLayout>
    <include layout="@layout/fragment_new_goods"/>
</LinearLayout>
