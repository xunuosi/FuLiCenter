<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:id="@+id/category_group_parent"
    android:background="@color/btn_white_normal"
    >
    <ImageView
        android:id="@+id/category_group_goodsimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/arrow2_down"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/category_group_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="æœ€IN"
        android:textSize="18sp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/category_group_goodsimage"
        android:layout_marginLeft="20dp"
        />
    <ImageView
        android:id="@+id/category_group_arrowimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        tools:src="@mipmap/expand_on"
        />
