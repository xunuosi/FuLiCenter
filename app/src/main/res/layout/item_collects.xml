<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/collect_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"

    >
    <ImageView
        android:id="@+id/newgoods_image_view"
        android:layout_width="150dp"
        android:layout_height="250dp"
        android:src="@drawable/nopic"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/newgoods_title_text_view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        tools:text="防雾霾口罩 黄色"
        android:layout_below="@id/newgoods_image_view"
        android:gravity="center_horizontal"
        />
    <ImageView
        android:id="@+id/delete_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/delete"
        android:layout_alignRight="@id/newgoods_image_view"
        />
</RelativeLayout>