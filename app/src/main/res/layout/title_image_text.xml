<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/good_detail_title_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/title_back_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:src="@drawable/back"
        />

    <TextView
        android:id="@+id/title_show_message_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/title_back_imageView"
        android:text="@string/goods_detail_top"
        android:textColor="@color/bg_gray_light"
        />
</RelativeLayout>